<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.EditPage"
             xmlns:res ="clr-namespace:ShoppingList.Resources"
             Title="{x:Static res:AppRes.EditPageTitle}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Shadow x:Key="shadow" Brush="{AppThemeBinding Dark=White, Light=Gray}" Offset="10,10" Opacity="0.5"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ImageButton Grid.Column="0" Source="cancel_svgrepo_com.svg" Command="{Binding CancelCommand}" />
            <ImageButton Grid.Column="2" Source="tick_svgrepo_com.svg" Command="{Binding SaveCommand}" />
        </Grid>
        
        <Border Grid.Row="1" Margin="10">
            <Editor  Text="{Binding ShoppingList}" Shadow="{x:StaticResource Key=shadow}" Placeholder="{x:Static res:AppRes.EditorPlaceholder}"/>
        </Border>

        
    </Grid>
</ContentPage>